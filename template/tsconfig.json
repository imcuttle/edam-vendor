{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "types",
    "jsx": "react",
    // for pnpm support
    "preserveSymlinks": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "test",
    "__tests__"
  ]
}
